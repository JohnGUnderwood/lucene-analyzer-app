{
  "examples": [
    {
      "name": "Basic Lowercase & Stopwords",
      "description": "Simple analyzer with lowercase and stopword removal",
      "definition": {
        "name": "basicAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "stopword",
            "tokens": ["the", "a", "an", "and", "or", "but"],
            "ignoreCase": true
          }
        ]
      }
    },
    {
      "name": "HTML Stripping with Stemming",
      "description": "Strips HTML tags, applies lowercase, and Porter stemming",
      "definition": {
        "name": "htmlStemmer",
        "charFilters": [
          {
            "type": "htmlStrip"
          }
        ],
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "porterStemming"
          }
        ]
      }
    },
    {
      "name": "Autocomplete with Edge N-Grams",
      "description": "Edge gram tokenizer for autocomplete functionality",
      "definition": {
        "name": "autocompleteAnalyzer",
        "tokenizer": {
          "type": "edgeGram",
          "minGram": 2,
          "maxGram": 10
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          }
        ]
      }
    },
    {
      "name": "Character Mapping",
      "description": "Maps special characters before tokenization",
      "definition": {
        "name": "mappingAnalyzer",
        "charFilters": [
          {
            "type": "mapping",
            "mappings": {
              "&": "and",
              "@": "at",
              "Â©": "copyright"
            }
          }
        ],
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          }
        ]
      }
    },
    {
      "name": "Word Delimiter for Code",
      "description": "Splits camelCase and snake_case identifiers",
      "definition": {
        "name": "codeAnalyzer",
        "tokenizer": {
          "type": "whitespace"
        },
        "tokenFilters": [
          {
            "type": "wordDelimiterGraph",
            "generateWordParts": true,
            "generateNumberParts": true,
            "splitOnCaseChange": true,
            "preserveOriginal": false
          },
          {
            "type": "lowercase"
          },
          {
            "type": "flattenGraph"
          }
        ]
      }
    },
    {
      "name": "N-Gram Search",
      "description": "Creates n-grams for partial matching",
      "definition": {
        "name": "ngramAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "nGram",
            "minGram": 3,
            "maxGram": 5,
            "termNotInBounds": "omit"
          }
        ]
      }
    },
    {
      "name": "Phonetic Matching",
      "description": "Daitch-Mokotoff Soundex for phonetic matching",
      "definition": {
        "name": "phoneticAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "daitchMokotoffSoundex",
            "originalTokens": "include"
          }
        ]
      }
    },
    {
      "name": "English Language Analyzer",
      "description": "English possessives, stopwords, and stemming",
      "definition": {
        "name": "englishCustom",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "englishPossessive"
          },
          {
            "type": "lowercase"
          },
          {
            "type": "stopword",
            "tokens": ["the", "a", "an", "and", "are", "as", "at", "be", "but", "by", "for", "if", "in", "into", "is", "it", "no", "not", "of", "on", "or", "such", "that", "the", "their", "then", "there", "these", "they", "this", "to", "was", "will", "with"],
            "ignoreCase": true
          },
          {
            "type": "kStemming"
          }
        ]
      }
    },
    {
      "name": "ICU Folding & Normalization",
      "description": "Unicode normalization and folding for international text",
      "definition": {
        "name": "unicodeAnalyzer",
        "charFilters": [
          {
            "type": "icuNormalize"
          }
        ],
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "icuFolding"
          },
          {
            "type": "lowercase"
          }
        ]
      }
    },
    {
      "name": "Regex Pattern Replacement",
      "description": "Uses regex to replace patterns in tokens",
      "definition": {
        "name": "regexAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "regex",
            "pattern": "[^a-zA-Z0-9]",
            "replacement": "",
            "matches": "all"
          }
        ]
      }
    },
    {
      "name": "Shingle (Multi-word) Tokens",
      "description": "Creates tokens from consecutive word combinations",
      "definition": {
        "name": "shingleAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "shingle",
            "minShingleSize": 2,
            "maxShingleSize": 3
          }
        ]
      }
    },
    {
      "name": "Length Filter",
      "description": "Removes tokens outside specified length range",
      "definition": {
        "name": "lengthFilterAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "length",
            "min": 3,
            "max": 20
          }
        ]
      }
    },
    {
      "name": "Persian Text Analysis",
      "description": "Persian character normalization",
      "definition": {
        "name": "persianAnalyzer",
        "charFilters": [
          {
            "type": "persian"
          }
        ],
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          }
        ]
      }
    },
    {
      "name": "Snowball Stemmer (French)",
      "description": "French language stemming",
      "definition": {
        "name": "frenchStemmer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "lowercase"
          },
          {
            "type": "snowballStemming",
            "stemmerName": "french"
          }
        ]
      }
    },
    {
      "name": "ASCII Folding",
      "description": "Converts accented characters to ASCII equivalents",
      "definition": {
        "name": "asciiFoldAnalyzer",
        "tokenizer": {
          "type": "standard"
        },
        "tokenFilters": [
          {
            "type": "asciiFolding",
            "preserveOriginal": false
          },
          {
            "type": "lowercase"
          }
        ]
      }
    }
  ],
